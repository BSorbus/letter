<%- if devise_mapping.omniauthable? %>
	<ul class="list-inline center">
	<p>Możesz zalogować się także przez: </p>

  <%- resource_class.omniauth_providers.each do |provider| %>


		<% case provider.to_s %>
		<% when 'facebook' %>
	    <li><%= link_to image_tag("Facebook.png", height: '32', width: '32'), omniauth_authorize_path(resource_name, provider), title: 'Facebook', rel: 'tooltip'  %></li>
		<% when 'twitter' %>
	    <li><%= link_to image_tag("Twitter.png", height: '32', width: '32'), omniauth_authorize_path(resource_name, provider), title: 'Twitter', rel: 'tooltip'  %></li>
		<% when 'linkedin' %>
	    <li><%= link_to image_tag("Linkedin.png", height: '32', width: '32'), omniauth_authorize_path(resource_name, provider), title: 'Linkedin', rel: 'tooltip'  %></li>
		<% when 'github' %>
	    <li><%= link_to image_tag("Github.png", height: '32', width: '32'), omniauth_authorize_path(resource_name, provider), title: 'GitHub', rel: 'tooltip'  %></li>
		<% when 'passthru' %>
	    <li><%= link_to "P #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %></li>
		<% when 'google_oauth2' %>
	    <li><%= link_to image_tag("Google+.png", height: '32', width: '32'), omniauth_authorize_path(resource_name, provider), title: 'Google+', rel: 'tooltip'  %></li>
		<% else %>
	    <li><%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %></li>
		<% end %>


  <% end -%>
  </ul>
<% end -%>

